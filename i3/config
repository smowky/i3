set $screen_layout Screen_layout (1) ntb-only, (2) benqL+R, (3) ntb+benqL+R, (4) kancl 
mode "$screen_layout" {
    bindsym 1 exec --no-startup-id ~/.screenlayout/ntb.sh, mode "default"
    bindsym 2 exec --no-startup-id ~/.screenlayout/bengL_benqR.sh, mode "default" 
    bindsym 3 exec --no-startup-id  ~/.screenlayout/ntb-1-2.sh, mode "default" 
    bindsym 4 exec --no-startup-id  ~/.screenlayout/ntb-kancl.sh, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

